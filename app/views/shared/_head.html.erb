<div class="head">
	<div class="inner">
		<a class="logo" href="/">fav.tv</a>
		<ul id="mainnav">
			<%= yield :bar %>
		</ul>
		<ul id="tools">

			<li class="auth">
				<ul>
					<% if user_signed_in? -%> <!-- Provided by devise -->
					<li>
					  <%= link_to '用户信息', edit_user_registration_path %>
					</li>
					<li>
					  <%= link_to '退出登录', destroy_user_session_path, :method => :delete %>
					</li>
					<% else %>
					<div style="float:right">
					<li>
					  <%= link_to '注册', new_user_registration_path %>
					</li>
					<li>
					  <%= link_to '登录', new_user_session_path %>
					</li>
					</div>
					<% end -%>
				</ul>
			</li>
			<li class="search">
				<form method="get" action="/search/index">
				<label class="icon" for="gsrch">&nbsp;</label>
				<input id="gsrch" type="text" autocorrect="off" spellcheck="false" autocomplete="off" maxlength="70" value="" name="title">
				</form>
			</li>
		</ul>
	</div>
</div>