<div class="head">
	<div class="inner">
		<a class="logo" href="/">产品反馈系统</a>
		<ul id="mainnav">
			<%= yield :bar %>
		</ul>
		<ul id="tools">

			<li class="auth">
				<ul>
					<% if user_signed_in? -%> <!-- Provided by devise -->
					<li>

					</li>
				</ul>
			</li>
					<li id="usermenu" class="user">
											  
											<a class="avatar" href="<%= user_path(current_user) %>">
												<% if !current_user.people.blank? %>
													<%= image_tag(current_user.people,:size =>"27x27",:id => 'user_icon') %>
												<% else %>
													<%= image_tag('/images/none_logo.jpg',:size =>"27x27",:id => 'user_icon') %>
												<% end %>
											<span class="mask">&nbsp;</span>
											</a>
						<a class="name" onclick="$('#usermenu').toggleClass('open'); return false;" href="<%= users_path(current_user) %>"><%= current_user.email %></a>
						<span class="indicator" onclick="$('#usermenu').toggleClass('open'); return false;">&nbsp;</span>
						<ul class="menu">
						<li class="top">&nbsp;</li>
						<li class="logged_in_as">Hi,欢迎回来</li>
						<li class="divider">&nbsp;</li>
						<li class="logged_in_as"><%= link_to '我的收藏', favorites_user_path(current_user) %></li>
						<li class="logged_in_as"><%= link_to '我的好友', followers_user_path(current_user) %></li>
						<li class="logged_in_as"><%= link_to '我的私信', messages_user_path(current_user) %></li>						
						<li class="divider">&nbsp;</li>
						<li class="logged_in_as"><%= link_to '退出登录', destroy_user_session_path, :method => :delete %></li>
						<li class="btm">&nbsp;</li>
						</ul>
					</li>
										
					<% else %>
					<div style="float:right">
					<li>
					  <%= link_to '注册', new_user_registration_path %>
					</li>
					<li>
					<%= link_to '登陆',sign_path,:class => "ajax",:remote => true %>
					</li>
					</div>
				</ul>
			</li>
					<% end -%>
			<li class="search">
				<form method="post" action="/searches/">
				<label class="icon" for="gsrch">&nbsp;</label>
				<input id="search_keywords" type="text" autocorrect="off" spellcheck="false" autocomplete="off" maxlength="70" value="" name="title">
				</form>
			</li>
		</ul>
	</div>
</div>
