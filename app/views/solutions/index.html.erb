<h1>Listing solutions</h1>

<table>
  <tr>
    <th>Case</th>
    <th>User</th>
    <th>Version number</th>
    <th>Max number</th>
    <th>Reason</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @solutions.each do |solution| %>
  <tr>
    <td><%= solution.case_id %></td>
    <td><%= solution.user_id %></td>
    <td><%= solution.version_number %></td>
    <td><%= solution.max_number %></td>
    <td><%= solution.reason %></td>
    <td><%= solution.content %></td>
    <td><%= link_to 'Show', solution %></td>
    <td><%= link_to 'Edit', edit_solution_path(solution) %></td>
    <td><%= link_to 'Destroy', solution, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

